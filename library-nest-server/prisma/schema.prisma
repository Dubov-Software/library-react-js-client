// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Book {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  author String
  publication_date DateTime
  isbn String? @default("")
  stock Int? @default(0)
}